{
  "workbench.productIconTheme": "material-product-icons",
  "window.title": "${activeEditorLong}${separator}${rootPath}",
  "workbench.editor.highlightModifiedTabs": true,

  // Type
  "editor.fontLigatures": true,
  "editor.fontFamily": "'VictorMono Nerd Font'",
  "editor.fontSize": 15,
  // "editor.fontWeight": "500",
  "editor.lineHeight": 0,
  "editor.letterSpacing": 0.5,
  "editor.wordWrap": "on",
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": { "source.fixAll": true },

  // Layout
  "workbench.sideBar.location": "right",
  "debug.toolBarLocation": "docked",
  "workbench.startupEditor": "none",
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  "zenMode.hideActivityBar": false,

  // Explorer
  "explorer.sortOrder": "type",
  "files.exclude": {
    "**/.git": false
  },

  // Annoying things
  "gitlens.showWelcomeOnInstall": false,
  "material-icon-theme.showWelcomeMessage": false,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,

  // Rendering
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "all",

  "editor.linkedEditing": true,

  // Cursor
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,

  // Brackets
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "htmlhint.enable": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "tabnine.experimentalAutoImports": true,
  "tabnine.receiveBetaChannelUpdates": true,

  // StyleLint
  "css.validate": false,
  "stylelint.enable": true,
  "scss.validate": false,

  // Status
  "eslint.alwaysShowStatus": true,
  "editor.suggest.showStatusBar": true,

  // Terminal
  "terminal.external.windowsExec": "wt.exe",
  "terminal.integrated.fontFamily": "'VictorMono Nerd Font'",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontSize": 14,
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "path": ["C:\\Program Files\\PowerShell\\7\\pwsh.exe"],
      "args": ["-NoLogo"]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },

  // Discord RPC
  "discord.detailsIdling": "Idling (Probably looking at stackoverflow)",
  "discord.removeRemoteRepository": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.formatOnSave": true
  },

  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },

  "[css]": {
    "editor.defaultFormatter": "aeschli.vscode-css-formatter"
  },

  "[typescriptreact]": {},

  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },

  // Liveserver
  "fiveServer.navigate": true,
  "fiveServer.port": 4200,
  "remote.SSH.remotePlatform": {
    "10.0.0.5": "linux"
  },
  "files.autoSave": "onFocusChange",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontWeight": "600",
  "workbench.colorTheme": "Dracula",
  "editor.inlineSuggest.enabled": true,
  "reactSnippets.settings.prettierEnabled": true,
  "editor.acceptSuggestionOnEnter": "off",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "javascript": true
  }
}
